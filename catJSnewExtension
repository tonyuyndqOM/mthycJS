class catJSscratch {

  getInfo() {
    return {

      id: 'catJS',
      name: 'Cat js extension',

      blocks: [
        {
          opcode: 'same',
          blockType: Scratch.BlockType.BOOLEAN,
          text: '[a] the same as [b]',
          arguments: {
            a: {
                type: Scratch.ArgumentType.STRING,
                defaultValue: 'apples'
            },
            b: {
                type: Scratch.ArgumentType.STRING,
                defaultValue: 'apple'
            }
          }
        },{
          opcode: 'log',
          blockType: Scratch.BlockType.COMMAND,
          text: 'log [x] verify [key]',
          arguments: {
            x: {
              type: Scratch.ArgumentType.STRING,
              defaultValue: 'press F12!'
            },
            key: {
                type: Scratch.ArgumentType.STRING,
                defaultValue: 'put your key here'
            }
          }
        },{
            opcode: 'keylog',
            blockType: Scratch.BlockType.REPORTER,
            text: 'logging key'
        }
      ]
    };
  }
  same() {
    return args.a === args.b;
  }
  log() {
    if(args.key == 'ye logging key') {
      console.log(args.x)
    }
  }
  keylog() {
    return 'ye logging key'
  }
}
Scratch.extensions.register(new catJS());
